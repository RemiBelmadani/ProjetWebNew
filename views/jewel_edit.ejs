<%- include("partials/header") %>
<link rel="stylesheet" href="css/styles.css">

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="">

</head>
<body>
    <h1>Single jewel editor form
</h1>

<p><a href='/Jewels/list'>Back to the list</a></p>
<!-- body-parser ==> we cannot use multipart/form-data ==> no file uploads -->
<form action='/Jewels/update/<%= OneJewel.Jewel_ID %>' method='post' 
    enctype='application/x-www-form-urlencoded'>
<table class="table table-striped table-bordered table-hover">            
    <tr><td>Material:</td>
        <td><input type='text' name='Jewel_material' value='<%= OneJewel.Jewel_material %>' /></td></tr>
    <tr><td>size:</td>
        <td><input type='number' name='size' value='<%= OneJewel.size %>' /></td></tr>
    <tr><td>price:</td>
        <td><input type='number' name='price' value='<%= OneJewel.price %>' /></td></tr>
    <tr><td>model:</td>
        <td><input type='text' name='Jewel_name' value='<%= OneJewel.Jewel_name %>' /></td></tr>
    <tr><td>Stone:</td>
        <td><input type='text' name='Stone' value='<%= OneJewel.Stone %>' /></td></tr>
    <tr><td>Category:</td>
        <td><input type='text' name='Jewel_category' value='<%= OneJewel.Jewel_category %>' /></td></tr>
    <tr><td>Stock:</td>
        <td><input type='text' name='Stock' value='<%= OneJewel.Stock %>' /></td></tr> 
    
    <tr><td colspan='2'> <input type='submit' value='SEND' /> </td></tr>
</table>
</form>
</body>
</html>



<%- include("partials/footer") %>
